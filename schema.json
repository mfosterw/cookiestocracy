    "components": {
        "schemas": {
            "Bill": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "author": {
                        "$ref": "#/components/schemas/User"
                    },
                    "pull_request": {
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/PullRequest"
                            }
                        ],
                        "readOnly": true
                    },
                    "status": {
                        "type": "string"
                    },
                    "yes_votes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "readOnly": true
                    },
                    "no_votes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "readOnly": true
                    },
                    "user_supports": {
                        "type": "boolean",
                        "nullable": true,
                        "description": "Return whether the user supports the bill. If the user is not authenticated\nor has not voted on this bill, return None.\n\nArgs:\n    bill: The bill to check\n\nReturns:\n    Whether the user supports the bill, or None if not applicable",
                        "readOnly": true
                    },
                    "created": {
                        "type": "string",
                        "format": "date-time",
                        "readOnly": true
                    },
                    "status_changed": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 100
                    },
                    "description": {
                        "type": "string"
                    },
                    "constitutional": {
                        "type": "boolean",
                        "readOnly": true,
                        "description": "True if this bill is an amendment to the constitution"
                    }
                },
                "required": [
                    "author",
                    "constitutional",
                    "created",
                    "id",
                    "name",
                    "no_votes",
                    "pull_request",
                    "status",
                    "user_supports",
                    "yes_votes"
                ]
            },
            "PatchedBill": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "author": {
                        "$ref": "#/components/schemas/User"
                    },
                    "pull_request": {
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/PullRequest"
                            }
                        ],
                        "readOnly": true
                    },
                    "status": {
                        "type": "string"
                    },
                    "yes_votes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "readOnly": true
                    },
                    "no_votes": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "readOnly": true
                    },
                    "user_supports": {
                        "type": "boolean",
                        "nullable": true,
                        "description": "Return whether the user supports the bill. If the user is not authenticated\nor has not voted on this bill, return None.\n\nArgs:\n    bill: The bill to check\n\nReturns:\n    Whether the user supports the bill, or None if not applicable",
                        "readOnly": true
                    },
                    "created": {
                        "type": "string",
                        "format": "date-time",
                        "readOnly": true
                    },
                    "status_changed": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 100
                    },
                    "description": {
                        "type": "string"
                    },
                    "constitutional": {
                        "type": "boolean",
                        "readOnly": true,
                        "description": "True if this bill is an amendment to the constitution"
                    }
                }
            },
            "PatchedUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "Required. 150 characters or fewer. Letters, digits and @/./+/-/_ only.",
                        "pattern": "^[\\w.@+-]+$",
                        "maxLength": 150
                    },
                    "name": {
                        "type": "string",
                        "title": "Name of User",
                        "maxLength": 255
                    },
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "readOnly": true
                    }
                }
            },
            "PullRequest": {
                "type": "object",
                "properties": {
                    "number": {
                        "type": "integer",
                        "readOnly": true,
                        "title": "Pull request number"
                    },
                    "title": {
                        "type": "string",
                        "readOnly": true
                    },
                    "additions": {
                        "type": "integer",
                        "readOnly": true,
                        "description": "Lines added"
                    },
                    "deletions": {
                        "type": "integer",
                        "readOnly": true,
                        "description": "Lines removed"
                    },
                    "diff_url": {
                        "type": "string",
                        "format": "uri",
                        "readOnly": true,
                        "description": "URL to the diff of the pull request"
                    },
                    "created": {
                        "type": "string",
                        "format": "date-time",
                        "readOnly": true
                    }
                },
                "required": [
                    "additions",
                    "created",
                    "deletions",
                    "diff_url",
                    "number",
                    "title"
                ]
            },
            "SocialLogin": {
                "type": "object",
                "properties": {
                    "access_token": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    },
                    "id_token": {
                        "type": "string"
                    }
                }
            },
            "Token": {
                "type": "object",
                "description": "Serializer for Token model.",
                "properties": {
                    "key": {
                        "type": "string",
                        "maxLength": 40
                    }
                },
                "required": [
                    "key"
                ]
            },
            "User": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "Required. 150 characters or fewer. Letters, digits and @/./+/-/_ only.",
                        "pattern": "^[\\w.@+-]+$",
                        "maxLength": 150
                    },
                    "name": {
                        "type": "string",
                        "title": "Name of User",
                        "maxLength": 255
                    },
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "readOnly": true
                    }
                },
                "required": [
                    "url",
                    "username"
                ]
            },
            "Vote": {
                "type": "object",
                "properties": {
                    "bill": {
                        "type": "integer"
                    },
                    "support": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "bill",
                    "support"
                ]
            }
        },
        "securitySchemes": {
            "cookieAuth": {
                "type": "apiKey",
                "in": "cookie",
                "name": "sessionid"
            },
            "tokenAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization",
                "description": "Token-based authentication with required prefix \"Token\""
            }
        }
    }
}
